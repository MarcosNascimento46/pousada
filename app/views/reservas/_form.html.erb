<%= form_with(model: reserva, local: true) do |form| %>
  <% if reserva.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reserva.errors.count, "erro") %> proibiu que a reserva fosse salva:</h2>
      <ul>
        <% reserva.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :data_inicio %>
    <%= form.date_select :data_inicio, start_year: Date.current.year, end_year: Date.current.year + 2 %>
  </div>

  <div>
    <%= form.label :data_fim %>
    <%= form.date_select :data_fim, start_year: Date.current.year, end_year: Date.current.year + 2 %>
  </div>

  <div>
    <%= form.label :hospede_id %>
    <%= form.collection_select :hospede_id, Hospede.all, :id, :nome, include_blank: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
