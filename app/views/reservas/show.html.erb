<h1 class="reserva-title">Reserva <%= @reserva.id %></h1>

<div class="reserva-details">
  <p class="reserva-item">
    <strong>Data de Início:</strong>
    <span class="reserva-value"><%= @reserva.data_inicio %></span>
  </p>

  <p class="reserva-item">
    <strong>Data de Fim:</strong>
    <span class="reserva-value"><%= @reserva.data_fim %></span>
  </p>

  <p class="reserva-item">
    <strong>Hóspede:</strong>
    <span class="reserva-value"><%= @reserva.hospede.nome %></span>
  </p>
</div>

<div class="reserva-links">
  <%= link_to 'Editar', edit_reserva_path(@reserva), class: 'btn-edit' %>
  <%= link_to 'Voltar', reservas_path, class: 'btn-back' %>
</div>
