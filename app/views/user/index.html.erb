<h1>Usuários</h1>
<%= link_to 'Criar um novo usuário', new_user_path %>

<form method="get" action="<%= search_users_path %>">
  <input type="text" name="query" placeholder="Buscar usuários" />
  <input type="submit" value="Buscar" />
</form>

<table>
  <thead>
  <tr>
    <th>Email</th>
    <th>Ações</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td>
        <%= link_to 'Mostrar', user_path(user) %>
        <%= link_to 'Editar', edit_user_path(user) %>
        <%= link_to 'Remover', user_path(user), method: :delete, data: { confirm: 'Tem certeza?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
